#!/usr/bin/env bash

alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias fgrep="fgrep --color=auto"

alias ls="eza"
alias l="eza -lFh"
alias la="eza -laFh"
alias lsd="eza -lF --only-dirs"

alias vgit="vcsh dotfiles"
alias fire="DISPLAY= cacafire"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias em="emacs"
alias emc="TERM=screen-256color emacsclient -t -a=vi"

alias k="kubectl"
alias vim="emc"

alias sway="exec systemd-cat --identifier=sway sway"
