# Custom Shortcuts
bindsym Ctrl+Shift+Super_L exec --no-startup-id ~/.config/i3/scripts/lock

# Pulse Audio controls
bindsym Shift+Ctrl+ISO_Level3_Shift exec --no-startup-id ~/.config/i3/scripts/volume_down
bindsym Shift+Ctrl+Super_R exec --no-startup-id ~/.config/i3/scripts/volume_up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/scripts/volume_down
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/scripts/volume_up
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 3
bindsym XF86MonBrightnessDown exec xbacklight -dec 2

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Restore layout
exec_always --no-startup-id "autorandr --change"

# Natuxral scrolling
exec --no-startup-id synclient VertScrollDelta=-111

# Set background
exec_always --no-startup-id "nitrogen --set-scaled ~/Pictures/bkg.png"

# Launch xflux with location set to London
exec --no-startup-id "xflux -l 51.5939, 0.0883"

# xss-lock for auto lock on systemd events
exec --no-startup-id xss-lock -- ~/.config/i3/scripts/lock

# Transitions
