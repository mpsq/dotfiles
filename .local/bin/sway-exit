#!/usr/bin/env bash
set -euo pipefail

case "$1" in
  exit)
    systemctl --user stop sway-session.target
    systemctl --user unset-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK SSH_AUTH_SOCK
    gpgconf --kill gpg-agent
    swaymsg exit
    ;;
  reboot)
    systemctl -i reboot
    ;;
  shutdown)
    systemctl -i poweroff
    ;;
  *)
    echo "Usage: $0 {exit|reboot|shutdown}"
    exit 2
    ;;
esac
