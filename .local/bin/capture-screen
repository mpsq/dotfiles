#!/usr/bin/env bash
set -euo pipefail

arg="${1:-instant}"

mkdir -p ~/instants
now=$(date +'%Y-%m-%d-%H%M%S')

if [[ "$arg" == "video" ]]; then
  if ps -e | grep -q wf-recorder; then
    killall -s 2 wf-recorder
  else
    wf-recorder -g "$(slurp)" -f ~/instants/"$now".mp4
  fi
else
  grim -g "$(slurp)" ~/instants/"$now".png
fi
